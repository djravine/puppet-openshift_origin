.navbar.utility
  .navbar-inner
    .container
      - unless Console.config.disable_account
        %ul.nav.pull-right
          %li.dropdown.hidden-phone
            = link_to account_path, :class => "dropdown-toggle username", "data-target" => "#", "data-toggle" => "dropdown" do
              %span.icon-user.icon-white
              = current_user_id
              %b.caret
            %ul.dropdown-menu
              %li= link_to "My Account", "/accounts"
              %li.divider
              %li= link_to "Sign Out", "/logout", :class => "sign_out"
      %a.btn.btn-navbar{'data-target' => '.nav-collapse', 'data-toggle' => 'collapse'}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
.navbar.primary
  .navbar-inner
    .container
      .nav-collapse.collapse
        = navigation_tabs do
          = navigation_tab :applications, :name => "Applications"
          = navigation_tab :settings, :action => :show, :name => "Settings"
          %li
            = link_to "Help", "/accounts/knowledgebase.php"
          %li
            = link_to "Account", "/accounts"
